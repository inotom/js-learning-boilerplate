  "license": "MIT",
  "bugs": {
    "url": "https://github.com/inotom/js-learning-boilerplate/issues"
  },
  "homepage": "https://github.com/inotom/js-learning-boilerplate#readme",
  "devDependencies": {
    "browser-sync": "2.18.13",
    "eslint": "4.4.1",
    "nodemon": "1.11.0"
  }
}
