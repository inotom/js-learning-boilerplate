{
  "name": "js-learning-boilerplate",
  "version": "1.0.0",
  "description": "Learning Environment for Javascript",
  "scripts": {
    "start": "npm run server & npm run watch:eslint",
    "server": "browser-sync start --server dist --files 'dist/**/*' --no-open",
    "watch:eslint": "nodemon -w dist -e js -x npm run eslint --silent",
    "eslint": "eslint dist/*.js",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
